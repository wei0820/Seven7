<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jhengweipan.SevenPeopleBook.HitCityActivity">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="8"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/weekname"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="monday"
                android:textSize="18dp"
                android:padding="8dp"
                ></TextView>
            <ImageView
                android:id="@+id/hitCityImagView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="8dp"

                ></ImageView>
            <TextView
            android:id="@+id/bossname"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="monday"
            android:textSize="18dp"
            android:padding="8dp"
            ></TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/effect"
                android:textSize="18dp"
                android:padding="8dp"

                ></TextView>
            <TextView
                android:id="@+id/effectText"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:padding="8dp"
                ></TextView>
            <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:padding="8dp"
            android:text="@string/prerequisites"
            ></TextView>


            <ImageView
                android:id="@+id/prerequisitesImagView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="8dp"

                ></ImageView>
            <TextView
                android:id="@+id/hitpeopleName"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:padding="8dp"
                ></TextView>

            <ImageView
                android:id="@+id/prerequisitesImagView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="8dp"

                ></ImageView>
            <TextView
                android:id="@+id/hitpeopleName2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:padding="8dp"
                ></TextView>
            <TextView
                android:id="@+id/ability"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="18dp"
                android:padding="8dp"
                ></TextView>
            <Button
                android:id="@+id/hitCitybutton"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/hitcitybtn"
                android:textSize="18dp"
                android:padding="8dp"
                ></Button>
            <Button
                android:id="@+id/hitCitybutton2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/hitcitybtn_2"
                android:textSize="18dp"
                android:padding="8dp"
                ></Button>
            <Button
                android:id="@+id/hitCitybutton3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/hitcitybtn_3"
                android:textSize="18dp"
                android:padding="8dp"
                ></Button>


        </LinearLayout>


    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:layout_gravity="center"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7019441527375550/2675824222" />


</LinearLayout>
